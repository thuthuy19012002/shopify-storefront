{% liquid
  assign bg_color = settings.secondary_color
  assign text_color = settings.primary_color
%}

<section class="md:py-9 py-7" style="background: {{ bg_color }}; color: {{ text_color }};">
  <div class="max-w-[726px] mx-auto px-[15px]">
    <h1 class="md:text-[55px] text-[42px] font-bold text-center md:mb-10 mb-7">{{ page.title }}</h1>
    <div class="md:text-base text-[15px]">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:general.page",
  "settings": []
}
{% endschema %}
