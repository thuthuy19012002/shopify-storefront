{% liquid
  assign bg_color = section.settings.background_color | default: settings.secondary_color
  assign text_color = section.settings.text_color | default: settings.primary_color
%}

<section style="background: {{ bg_color }}; color: {{ text_color }};">
  <div class="scroll-fade-in md:px-[50px] px-4 md:py-9 py-7 grid md:grid-cols-3 md:gap-10 gap-5">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% render 'feature-item',
          icon: block.settings.icon,
          title: block.settings.title,
          subtitle: block.settings.subtitle
        %}
      {% endfor %}
    {% else %}
      {% for block in (1..3) %}
        {% render 'feature-item', title: 'Fast Shipping', subtitle: 'Free Shipping on Orders Over $50' %}
      {% endfor %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "t:general.features_section",
  "settings": [
    {
      "id": "background_color",
      "type": "color",
      "label": "t:labels.background"
    },
    {
      "id": "text_color",
      "type": "color",
      "label": "t:general.colors"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature item",
      "settings": [
        {
          "id": "icon",
          "label": "t:labels.icon",
          "type": "image_picker"
        },
        {
          "id": "title",
          "label": "t:options.text_style.title",
          "type": "text",
          "default": "Fast Shipping"
        },
        {
          "id": "subtitle",
          "label": "t:options.text_style.subtitle",
          "type": "text",
          "default": "Free Shipping on Orders Over $50"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "t:general.features_section",
      "category": "Body"
    }
  ]
}
{% endschema %}
