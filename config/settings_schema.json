[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "poppins_n4",
        "label": "t:general.primary"
      },
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "primary_color",
        "default": "#121212",
        "label": "t:labels.primary"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "default": "#ffffffe6",
        "label": "t:labels.secondary"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "t:general.information",
    "settings": [
      {
        "type": "text",
        "id": "email",
        "label": "t:labels.email",
        "default": "test@test.test"
      },
      {
        "type": "text",
        "id": "phone",
        "label": "t:labels.phone",
        "default": "012345678"
      },
      {
        "type": "text",
        "id": "working_time",
        "label": "t:labels.working_time",
        "default": "24/7"
      },
    ]
  }
]
